    "eslint-plugin-prettier": "^4.0.0",
    "onchange": "^7.1.0",
    "prettier": "^2.4.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "matter-js": "^0.19.0",
    "pixi.js": "^7.2.4"
