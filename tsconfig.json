{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "removeComments": false,
    "noImplicitAny": true,
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
